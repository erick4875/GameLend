<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gameDetailMainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFDFD"
    tools:context=".activities.GameDetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/gameDetailToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#009688"
        android:theme="?attr/actionBarTheme"
        app:title="@string/title_activity_game_detail"
        app:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:id="@+id/detailsScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/gameDetailToolbar"
        app:layout_constraintBottom_toTopOf="@+id/requestLoanButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true"
        android:paddingBottom="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/gameImageViewDetail"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/mando"
                android:scaleType="centerCrop"
                android:contentDescription="@string/cd_game_image"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/gameTitleTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/loading_text"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#1A1919"
                app:layout_constraintTop_toTopOf="@+id/gameImageViewDetail"
                app:layout_constraintStart_toEndOf="@+id/gameImageViewDetail"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/platformTextViewLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_platform"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#595B6A"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/gameTitleTextView"
                app:layout_constraintStart_toStartOf="@+id/gameTitleTextView" />

            <TextView
                android:id="@+id/platformTextViewDetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/loading_text_short"
                android:textSize="16sp"
                android:textColor="#1A1919"
                app:layout_constraintStart_toEndOf="@+id/platformTextViewLabel"
                app:layout_constraintBaseline_toBaselineOf="@+id/platformTextViewLabel"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/genreTextViewLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_genre"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#595B6A"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/platformTextViewLabel"
                app:layout_constraintStart_toStartOf="@+id/platformTextViewLabel" />

            <TextView
                android:id="@+id/genreTextViewDetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/loading_text_short"
                android:textSize="16sp"
                android:textColor="#1A1919"
                app:layout_constraintStart_toEndOf="@+id/genreTextViewLabel"
                app:layout_constraintBaseline_toBaselineOf="@+id/genreTextViewLabel"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/statusTextViewLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_status_detail"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#595B6A"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/genreTextViewLabel"
                app:layout_constraintStart_toStartOf="@+id/genreTextViewLabel" />

            <TextView
                android:id="@+id/statusTextViewDetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/loading_text_short"
                android:textSize="16sp"
                android:textColor="#1A1919"
                app:layout_constraintStart_toEndOf="@+id/statusTextViewLabel"
                app:layout_constraintBaseline_toBaselineOf="@+id/statusTextViewLabel"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/ownerTextViewLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_owner"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#595B6A"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/statusTextViewLabel"
                app:layout_constraintStart_toStartOf="@+id/statusTextViewLabel" />

            <TextView
                android:id="@+id/ownerNameTextViewDetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/loading_text_short"
                android:textSize="16sp"
                android:textColor="#1A1919"
                app:layout_constraintStart_toEndOf="@+id/ownerTextViewLabel"
                app:layout_constraintBaseline_toBaselineOf="@+id/ownerTextViewLabel"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/descriptionLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_description"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1A1919"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/gameImageViewDetail"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/descriptionTextViewDetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/loading_text_long"
                android:textSize="16sp"
                android:textColor="#333333"
                app:layout_constraintTop_toBottomOf="@+id/descriptionLabelTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/requestLoanButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/button_request_loan"
        android:backgroundTint="#00796B"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ProgressBar
        android:id="@+id/gameDetailLoadingProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
